{
  "name": "@migros/mdx-design-tokens",
  "version": "2.33.0",
  "description": "Design tokens and style configuration for multiple products as part of a design system.",
  "author": "MDX Team and Contributors",
  "license": "ISC",
  "keywords": [
    "figma",
    "design_token",
    "design",
    "token",
    "designToken"
  ],
  "scripts": {
    "prebuild": "ts-node ./src/prepareDesignTokens.ts",
    "build": "ts-node ./src/buildDesignTokens.ts --usePixels && ts-node ./src/buildDesignTokens.ts || ts-node ./src/buildDesignTokens.ts --debug",
    "supernova:sync-tokens": "supernova sync-tokens --apiKey=$SUPERNOVA_API_KEY --designSystemId=$SUPERNOVA_SYSTEM_ID --tokenDirPath ./designTokens --configFilePath ./supernova.settings.json",
    "release": "semantic-release",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:update": "jest -u",
    "test:buildDesignTokens:update": "jest -u -t buildDesignTokens"
  },
  "lint-staged": {
    "*.ts": "npm run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git@git.intern.migros.net:mdx/mdx.git"
  },
  "files": [
    "dist/**/*",
    "docs/**/*",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@supernovaio/cli": "1.0.4",
    "@tokens-studio/sd-transforms": "0.12.2",
    "@types/glob": "8.1.0",
    "@types/tinycolor2": "1.4.6",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "style-dictionary": "3.8.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2"
  },
  "engines": {
    "node": "^18.x || ^20.x",
    "npm": "^10.x"
  },
  "dependencies": {
    "expr-eval": "^2.0.2",
    "tinycolor2": "^1.4.2"
  },
  "nx": {
    "targets": {
      "test": {
        "dependsOn": [
          "build"
        ]
      },
      "test:update": {
        "dependsOn": [
          "build"
        ]
      },
      "test:buildDesignTokens:update": {
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "gitHead": "efd19a3fa38b2e7f2847ebebc6a13970c76620c3"
}
