{
  "name": "@migros/mdx-design-tokens",
  "version": "0.63.3",
  "description": "Design tokens and style configuration for multiple products as part of a design system.",
  "author": "MDX Team and Contributors",
  "license": "ISC",
  "keywords": [
    "figma",
    "design_token",
    "design",
    "token",
    "designToken"
  ],
  "scripts": {
    "build": "npm run build:px && npm run build:rem",
    "build:px": "ts-node ./src/buildDesignTokens.ts --usePixels",
    "build:rem": "ts-node ./src/buildDesignTokens.ts",
    "presupernova:sync-tokens": "ts-node ./src/fixThemeNamesForSupernova.ts",
    "supernova:sync-tokens": "npx supernova sync-tokens --apiKey=$SUPERNOVA_API_KEY --designSystemId=$SUPERNOVA_SYSTEM_ID --tokenDirPath ./designTokensSupernova --configFilePath ./supernova.settings.json",
    "release": "semantic-release",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:update": "jest -u",
    "test:buildDesignTokens:update": "jest -u -t buildDesignTokens"
  },
  "repository": {
    "type": "git",
    "url": "git@git.intern.migros.net:mdx/mdx.git"
  },
  "files": [
    "dist/**/*",
    "docs/**/*"
  ],
  "devDependencies": {
    "@supernovaio/cli": "^0.9.28",
    "@types/glob": "^8.0.0",
    "@types/tinycolor2": "^1.4.3",
    "jest": "^29.6.0",
    "style-dictionary": "^3.7.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": "^18",
    "npm": "^9.0.0"
  },
  "dependencies": {
    "expr-eval": "^2.0.2",
    "tinycolor2": "^1.4.2"
  },
  "nx": {
    "targets": {
      "test": {
        "dependsOn": [
          "build"
        ]
      },
      "test:update": {
        "dependsOn": [
          "build"
        ]
      },
      "test:buildDesignTokens:update": {
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "gitHead": "17bede4a86c12f5bb1038a8357695958a8d84156"
}
